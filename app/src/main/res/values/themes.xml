    </style>
    <style name="regular_red_textview_theme">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="regular_blue_textview_theme">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="input_layout_label_theme">
        <item name="colorControlNormal">@color/semi_gray</item>
        <item name="colorControlActivated">@color/dark_gray</item>
        <item name="colorControlHighlight">@color/dark_gray</item>
