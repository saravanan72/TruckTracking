<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TruckTracking" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:title">@null</item>
        <item name="titleTextColor">@android:color/transparent</item>
        <item name="android:dialogTitle">@null</item>
        <item name="titleEnabled">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.DayNight.DarkActionBar" >
        <item name="android:fontFamily">@font/oppins_semi_bold</item>
    </style>
    <style name="semibold_black_textview_theme">
        <item name="fontFamily">@font/oppins_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="semibold_white_textview_theme">
        <item name="fontFamily">@font/oppins_semi_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="semibold_green_textview_theme">
        <item name="fontFamily">@font/oppins_semi_bold</item>
        <item name="android:textColor">@color/green</item>
    </style>
    <style name="semibold_red_textview_theme">
        <item name="fontFamily">@font/oppins_semi_bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
    <style name="semibold_blue_textview_theme">
        <item name="fontFamily">@font/oppins_semi_bold</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <style name="regular_black_textview_theme">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="regular_white_textview_theme">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="regular_green_textview_theme">
